// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id       Int    @id @default(autoincrement())
  userImg String
  content  String
  postId   Int?
  Post     Post?  @relation(fields: [postId], references: [id])
}

model Post {
  id       Int       @id @default(autoincrement())
  image    String
  caption  String
  userName String
  userImg  String
  comments Comment[]
}
